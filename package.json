{
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "server/routes/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "server/routes/*.{html,css,less,ejs}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "prepare": "husky install"
  }
}
